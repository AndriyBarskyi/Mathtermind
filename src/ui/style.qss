}

/* Restoring original QCheckBox indicator styles based on previous tool output */
QCheckBox::indicator:checked {
    background-color: #6c9dfd;  /* синій */
    border: 1px solid #6c9dfd;
}

QCheckBox::indicator:unchecked {
    background-color: white;
    border: 1px solid #6c9dfd;
}

