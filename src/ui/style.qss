QRadioButton::indicator {
        width: 15px;
        height: 15px;
        border: 2px solid #6c9dfd; /* Blue border for unchecked */
        border-radius: 7px;        /* Circular shape */
        background-color: white;   /* White background for unchecked */
    }
QRadioButton::indicator:checked {
    image: url("blue_icon/mark.PNG"); /* Checkmark image */
    width: 16px; /* Keep existing size for checked */
    height: 16px;
    background-color: #6c9dfd; /* Blue background for checked */
    border: 2px solid #6c9dfd; /* Blue border for checked, same as background for a solid look */
}

