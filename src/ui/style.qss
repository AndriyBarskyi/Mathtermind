QProgressBar {
    /*border: 2px solid rgb(243, 243, 243);*/
    border-radius: 8px;
    background-color: #f3f3f3;
    height: 16px;
}

QProgressBar::chunk {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1, stop: 0 #6c9dfd,stop: 1 #8fb4ff);
    border-radius: 8px;
    
    border: 2px solid rgb(243, 243, 243);
}

QTabBar::tab {
    width:160;
    font: normal 10pt "MS Shell Dlg 2";
    background: #ffffff;
    color: #516ed9;
    border: 1px solid #dde2f6;
    border-radius: 15px;
    padding: 10px 20px;
}

QTabBar::tab:selected {
    background:  #dde2f6; 
    font-weight: bold; 
}

QTabBar::tab:hover {
    background: #ddf3f6;   
}

QPushButton[type="main"] {
